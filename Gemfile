source "https://rubygems.org"

gem "jekyll", "~> 4.2"
group :jekyll_plugins do
    gem 'jekyll-paginate'
    gem 'jekyll-feed'
    gem 'jemoji'
    gem 'jekyll-redirect-from'
    gem 'jekyll-gist'
    gem 'jekyll-include-cache'
    gem 'jekyll-remote-theme'
    gem 'jekyll-sitemap'
    gem 'jekyll-gzip'
    gem 'jekyll-brotli'
end
gem 'classifier-reborn'
gem 'gsl'
gem 'html-proofer'

